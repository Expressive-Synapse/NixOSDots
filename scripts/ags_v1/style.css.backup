/* Background rgba(0,0,0,0.5)*/ 
/* Primary color #9966ff rgb(153, 102, 255) */ 
/* Secondary color #e9a46c rgb(233, 164, 108)*/ 

* { all:unset}

window, .right-bar {
  font-size: 16px;
  color: white;
  margin: 1rem 1rem;
  border-radius: 1rem;
  background-color: rgba(0,0,0,0.5);
  border: 0.2rem solid #9966ff;
}

.clock {
  padding: 0 1rem;
}

.vol-icon {
    padding-left: 0.2rem;
    font-size: 20px;
  } 

.vol-percent {
    font-size: 12px;
  }

.vol-box {
    padding-left: 1rem;
  }

.vol-ebox {
    padding: 1px;
  }

.ws-box {
    padding: 0 0.5rem;
  }

.ws-bar button {
  color: white;
  border-radius: 3rem;
  margin: 0.5rem 0.3rem;
  padding: 0.5rem 1rem;
  background-color: rgba(153, 102, 255, 0.5 );
  min-width: 0.5rem;
  min-height: 0.5rem;

}
.ws-bar .ws-button-active {
  background-color: rgba(233, 164, 108, 0.5);

}

.ws-bar .ws-button-empty {
    margin: 0.5rem 0.3rem ;
    padding: 0rem 0rem ;
  }

scale {
    min-width: 5rem;
    min-height: 0.2rem;
  }
scale slider {
    border: 0.2rem solid #e9a46c; 
    min-width: 0.5rem;
    min-height: 0.5rem;
    border-radius: 2rem;
  }
scale highlight {
    background-color: blue;
    min-width: 4rem;
    min-height: 0.1rem;
  }
